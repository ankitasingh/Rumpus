            android:name="com.singh.ankita.leaf.screens.RumpusCheckIn"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.singh.ankita.leaf.screens.SearchOnYelp"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.singh.ankita.leaf.screens.DisplayAlbumImage"
            android:label="@string/app_name" 
             android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>